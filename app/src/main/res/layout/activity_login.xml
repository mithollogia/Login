<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFF">

    <LinearLayout
        android:id="@+id/principal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="30dp" >

        <TextView
            android:id="@+id/logo"
            android:text="Hello There!"
            android:textColor="#24374C"
            android:textSize="46sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/user"
            android:hint="E-Mail"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/imput"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/pass"
            android:hint="Password"
            android:padding="10dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/imput"/>

    <LinearLayout
        android:id="@+id/acesso"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/logar"
            android:text="Login"
            android:textColor="#fff"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttom"/>

        <TextView
            android:id="@+id/help"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Precisa ajuda?"
            android:textColor="#FF4D60"
            android:textSize="15sp" />

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/membro"
            android:text="Ainda nÃ£o e membro?"
            android:textColor="#5E7184"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/registrar"
            android:text="Registre-se"
            android:textColor="#FF4D60"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>